@model IEnumerable<khainguyen_FirstStep.EntityDauTu>

@{
    foreach (var item in Model)
    {
        <div class="supporter-row">
            <div class="avatar">
                @if(item.EntityUser.Avatar.Contains("fbcdn-profile-a.akamaihd.net"))
                {
                    <a href="/user/@item.EntityUser.VanityURL">
                        <img src="https://graph.facebook.com/@item.EntityUser.IdFacebook/picture?type=normal" />
                    </a>
                }
                else
                {
                    <a href="/user/@item.EntityUser.VanityURL">
                        <img src="@item.EntityUser.Avatar" />
                    </a> 
                }
            </div>
            <a href="/user/@item.EntityUser.VanityURL"><h3>@item.EntityUser.HoTen</h3></a>
            
            <div class="tag">
                <a href="#"><i class="fa-map-marker"></i>@item.EntityUser.DiaDiem</a>
                <a href="#"><i class="fa-tag"></i>@item.EntityUser.GioiThieu</a>
            </div>
            <div class="project">
            <span>@Html.Action("_ChiTietDuAn_SoDuAnThamGia", "DuAn", new { Id = item.EntityUser.Id })</span> project
            </div>
        </div>
    }
}

