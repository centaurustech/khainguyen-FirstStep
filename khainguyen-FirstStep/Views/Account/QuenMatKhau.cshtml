@model khainguyen_FirstStep.Models.AccountModel
@section MeTaHeader
{
    <title>Quên mật khẩu tài khoản - Firststep</title>
}

<style>
    .input-validation-error {
        border: 2px solid #0092c8 !important;
    }


    .field-validation-error {
        color: #fff !important;
        font-size: 12px !important;
        float: left;
    }
</style>
<link href="~/Content/cssFrontEnd/css/page-account.css" rel="stylesheet" />
<div class="page">
    <div class="panel-list">
        <div class="background">
            <img src="~/Content/cssFrontEnd/upload/project/bg3-1366x768.jpg" alt="" />
        </div>
        <div class="container">

            <!-- acc-login -->
            <div class="panel-login">
                <h4>Quên mật khẩu</h4>
                <div class="form-login">
                    @using (Html.BeginForm("QuenMatKhau", "Account",
            new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new {@enctype = "multipart/form-data" }))
                    { 
                        <form>
                            <p>
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-txt", @placeholder = "Email của bạn" })
                                @Html.ValidationMessageFor(model => model.Email)
                                <input name="HoTen" id="HoTen" value="nonamegsaggsa" hidden="hidden"/>
                                <input name="Pass" id="Pass" value="Pas1hahahaafs" hidden="hidden"/>
                                <input name="RePass" id="RePass" value="Pas1hahahaafs" hidden="hidden"/>
                            </p>
                            <p>
                                <button type="submit" class="btn btn-login-fb"><i class="fa-sign-in"></i>&nbsp;Đồng ý</button>
                            </p>
                        </form>
                    }

                </div>
            </div>

        </div>
    </div>
</div>
