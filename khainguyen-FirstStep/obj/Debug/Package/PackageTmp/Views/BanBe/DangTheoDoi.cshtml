@model IEnumerable<khainguyen_FirstStep.EntityTheoDoi>
@{
    ViewBag.Title = "Đang theo dõi";
}

@section MeTaHeader
{
    <meta name="robots" content="noindex,nofollow" />
}

<script src="~/Scripts/jquery-1.11.1.min.js"></script>
<style>
    .unapply:hover {
        background-color: red !important;
    }

        .unapply:hover span {
            display: none;
        }

        .unapply:hover ::before {
            content: "Hủy theo dõi" !important;
            font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
        }
</style>
<script type="text/javascript">
</script>
<div class="page">
    <div class="panel">
        <div class="container">

            <!-- acc-title -->
            @Html.Action("_Index", "BanBe")
            <div class="friend-list">
                @{
                    if (Model.Count() == 0)
                    {
                        <div class="friend-item">
                            <div class="inf">
                                <div class="name">Không tìm thấy kết quả</div>
                            </div>
                        </div>
                    }
                    else
                    {
                        foreach (var friend in Model)
                        {
                            string idd = "follow" + @friend.IdBanBe.ToString();
                            <div class="friend-item"  id="@idd">
                                <div class="ava">
                                    @if (friend.EntityUser1.Avatar.Contains("fbcdn-profile-a.akamaihd.net"))
                                    {
                                        <a href="/user/@friend.EntityUser1.VanityURL">
                                            <img src="https://graph.facebook.com/@friend.EntityUser.IdFacebook/picture?type=normal" />
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/user/@friend.EntityUser1.VanityURL">
                                            <img src="@friend.EntityUser1.Avatar" />
                                        </a> 
                                    }
                                </div>
                                <div class="inf">
                                    <div class="name">@friend.EntityUser1.HoTen</div>
                                     @*<p><i class="fa-codepen tiny"></i> Backed 1 project</p>*@
                                    <p><i class="fa-map-marker tiny"></i> @friend.EntityUser1.DiaDiem</p>
                                    <div>
                                        <a href="#" class="btn bg-red" onclick="return Un_Apply('@friend.IdBanBe')"><i class="fa-minus"></i> Hủy theo dõi</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }

            </div>
            <div style="height: 50px;"></div>
        </div>
    </div>
</div>
