<div class="acc-title">
    <h1><i class="fa-envelope"></i>Hoạt động </h1>
    <p>Gửi tin nhắn , cấu hình thông tin cá nhân, tạo dự án và xem lược sử.</p>
</div>
<nav class="menu-activity">
    <a href="@Url.Action("TinNhan", "HoatDong", new { type = 0})"><i class="fa-envelope"></i> Tin Nhắn</a>
    <a href="@Url.Action("HoatDong", "HoatDong")"><i class="fa-slack"></i> Nhật ký hoạt động</a>
    <a href="@Url.Action("Index", "user", new { Link = ViewBag.Link})"><i class="fa-user"></i> Quyền riêng tư</a>
    <a href="@Url.Action("LichSu", "HoatDong")"><i class="fa-suitcase"></i>Lược sử dự án</a>
    <a href="@Url.Action("TaoDuAn", "DuAn")"><i class="fa-plus"></i> Tạo dự án</a>
</nav>
<script src="~/Scripts/jquery-1.11.1.min.js"></script>
<script>
    $(document).ready(function () {
        $(".menu-activity a").each(function (index, value) {
            var url = $(location).attr("pathname");
            if (url.indexOf("?") > 0) { url = url.substring(0, url.indexOf("?")); }
            var url_compra = $(this).attr("href") ? $(this).attr("href") : "";
            if (url_compra.indexOf("?") > 0) { url_compra = url_compra.substring(0, url_compra.indexOf("?")); }
            var url_data_link = $(this).attr("data-link") ? $(this).attr("data-link") : "";
            if (url_compra != "/") {
                if (url.toLowerCase().indexOf(url_compra.toLowerCase()) >= 0 || url.indexOf(url_data_link) > 0) {
                    $(this).addClass("active");
                    return;
                }
            }
            else {
                if (url.toLowerCase() === url_compra.toLowerCase()) {
                    $(this).addClass("active");
                    return;
                }
            }
        });
    });
    </script>