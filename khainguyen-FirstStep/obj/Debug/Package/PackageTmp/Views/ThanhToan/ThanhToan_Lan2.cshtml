    <meta name="robots" content="noindex,nofollow" />
}

@{
    if(Model!= null){
<div class="page dark">
    <div class="container">
        <div class="title"><h1>@ViewBag.DuAn.TenDuAn</h1></div>
        <div class="author">By <a href="#">@ViewBag.DuAn.EntityUser.HoTen</a></div>

        <div class="page-detail">
