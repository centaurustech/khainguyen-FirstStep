                            <b>SỐ TIỀN THAM GIA</b>
                            <div class="des"></div>
                        </div>
                        <div class="col-7-3">
                            @{
                                int IDphanthuong = 0;
                                if (ViewBag.phanthuong.Id != 0)
                                { IDphanthuong = ViewBag.phanthuong.Id; }                              
