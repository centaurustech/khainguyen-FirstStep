<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
@model IEnumerable<khainguyen_FirstStep.EntityPhanThuong> 
<div class="proj-plege-html"></div>
                
@{
    if(Model.Count()==0)
    {
         <div class="proj-plege">
                        <div class="col-3-7">
                            <b>Phần thưởng #1</b><br />
                        </div>
                        <div class="col-7-3">
                            <div class="col-2">
                                <h4>Mức giá <i class="fa-question-circle tooltip color-red" title="description description description dshjf sdfjk dsfjksdf jdsfk djfjsdk"></i></h4>
                                <p><input class="form-txt text-right" type="number" value="" placeholder="0.00" style="width: 20%" /></p>
                                <h4>Hình thức giao hàng</h4>
                                <p>
                                    <select class="form-txt">
                                        <option value="">Lựa chọn hình thức</option>
                                        <option value="Giao Hàng Tận Nơi">Giao hàng tận nơi</option>
                                        <option value="Qua Bưu Điện">Qua bưu điện</option>
                                        <option value="Khác">Khác</option>
                                    </select>
                                </p>
                            </div>
                            <div class="col-2">
                                <h4>Số ngày giao hàng (ước tính)</h4>
                                <p><input class="form-txt text-right" type="number" value="" placeholder="0.00" style="width: 50%" /></p>
                                <label><h4><input type="checkbox" /> Giới hạn số lượng </h4></label>
                                <p><input class="form-txt text-right" type="number" value="" placeholder="0.00" style="width: 20%" /> <i class="fa-question-circle tooltip color-red" title="Điền giới hạn số lượng phần thưởng"></i></p>
                            </div>
                            <h4>Mô tả</h4>
                            <p><textarea class="form-txt"></textarea> </p>
                        </div>
                        <a href="#" class="btn btn-delete-reward bg-red" data-phanthuong="0">Xóa</a>
                    </div>
    }
    int dem=0;
    foreach(var item in Model)
    {
        dem++;
    <div class="proj-plege">
                        <div class="col-3-7">
                            <b>Phần thưởng #@dem</b><br />
                        </div>
                        <div class="col-7-3">
                            <div class="col-2" data-id="@dem">
                                <h4>Mức giá <i class="fa-question-circle tooltip color-red" title="description description description dshjf sdfjk dsfjksdf jdsfk djfjsdk"></i></h4>
                                <p><input class="form-txt text-right" type="number" value="@item.TienHoTro" placeholder="0.00" style="width: 20%" /></p>
                                <h4>Hình thức giao hàng</h4>
                                <p>
                                    <select class="form-txt" >
                                        <option value="">Lựa chọn hình thức</option>
                                        <option value="Giao Hàng Tận Nơi">Giao hàng tận nơi</option>
                                        <option value="Qua Bưu Điện">Qua bưu điện</option>
                                        <option value="Khác">Khác</option>
                                    </select>
                                    <script>
                                        $(document).ready(function () {
                                            var decoded = $('<div/>').html('@item.HinhThucGiao').text();
                                          //  $('.proj-plege select').val(decoded);
                                            $("div[data-id='" + '@dem' + "']").find('select').val(decoded);
                                        });
                                    </script>
                                </p>
                            </div>
                            <div class="col-2">
                                <h4>Thời gian giao hàng (ước tính)</h4>
                                <p>
                                    <input class="form-txt text-right datepicker" value="@item.NgayGiao" placeholder="0.00" style="width: 50%" />
                                 
                                </p>
                                   
                                 <label><h4>
                                     @if (item.SoLuong > 0)
                                     { <input type="checkbox" checked="checked" />
                                     }
                                     else
                                     {<input type="checkbox" />}
                                    
                                      Giới hạn số lượng </h4></label>
                                <p><input class="form-txt text-right" type="number" value="@item.SoLuong" placeholder="0.00" style="width: 20%" /> <i class="fa-question-circle tooltip color-red" title="Điền giới hạn số lượng phần thưởng"></i></p>

                            </div>
                            <h4>Mô tả</h4>
                            <p><textarea class="form-txt">@item.NoiDung</textarea> </p>
                        </div>
                        <a href="#" class="btn btn-delete-reward bg-red" data-phanthuong="@item.Id">Xóa</a>
                    </div>
}
}
