@model khainguyen_FirstStep.EntityDuAn
@{
    var sotien = (Model.TienDauTuHienTai * 100) / Model.TienDauTuMucTieu;
    var style = "";
    if (sotien == 0)
    {
        style = "width: 2%;";
    }
    else { style = "width:" + sotien + "%;"; }
    <div class="Model-project">
        <div class="border">
            <div class="img">
                <a href="@Url.Action("ChiTietDuAn", "DuAn", new { Title = Utilities.Paste_Int64(Utilities.Encode(Model.TenDuAn), Model.Id) })">
                    <img src="~/Content/Images/DuAn/@Model.HinhAnh" alt="Alternate Text" /></a>
            </div>
            <div class="title">
                <h4>@Model.TenDuAn</h4>
            </div>
            <div class="des">@Model.ThongTinNgan</div>
            <div class="tag">
                <a href="#"><i class="fa-map-marker"></i>@Model.DiaDiem</a>
                <a href="#"><i class="fa-tag"></i>Technology</a>
            </div>
            @if (sotien < 50)
            {
                <div class="percent">
                    <div class="value value bg-red" style="@style;"></div>
                </div>
            }
            else if (sotien >= 50 && sotien < 80)
            {
                <div class="percent">
                    <div class="value bg-orange" style="@style;"></div>
                </div>
            }
            else
            {
                <div class="percent">
                    <div class="value" style="@style;"></div>
                </div>
            }

            <div class="pledge">
                <div><span class="tiny">A$62,626</span> Pledged</div>
                <div><span class="tiny">104%</span> Funded</div>
                <div><span class="tiny">5</span> Days left</div>
            </div>
        </div>
    </div>
}